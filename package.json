{
  "name": "@malberee/nextui-native",
  "version": "1.1.9",
  "description": "NextUI for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "source": "src/index",
  "types": "lib/typescript/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/module/index.js"
      },
      "require": {
        "default": "./lib/commonjs/index.js"
      }
    },
    "./plugin": {
      "import": {
        "default": "./lib/module/plugin.js"
      },
      "require": {
        "default": "./lib/commonjs/plugin.js"
      }
    }
  },
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace nextui-native-example",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build && tsc-alias -p tsconfig.build.json",
    "release": "dotenv release-it --"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Malberee/nextui-native.git"
  },
  "author": "Malberee <pavellyalkov45@gmail.com> (https://github.com/Malberee)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Malberee/nextui-native/issues"
  },
  "homepage": "https://github.com/Malberee/nextui-native#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "@react-aria/label": "^3.7.11",
    "@react-aria/progress": "^3.4.17",
    "@react-aria/utils": "^3.25.2",
    "@react-native-aria/button": "^0.2.7",
    "@react-native-aria/checkbox": "^0.2.9",
    "@react-native-aria/radio": "^0.2.10",
    "@react-native-aria/slider": "^0.2.11",
    "@react-native-aria/switch": "^0.2.4",
    "@react-stately/slider": "^3.5.7",
    "@react-stately/toggle": "^3.7.7",
    "@react-types/checkbox": "^3.8.4",
    "@react-types/progress": "^3.5.7",
    "@react-types/textfield": "^3.9.7",
    "clsx": "^2.1.1",
    "color": "^4.2.3",
    "color2k": "^2.0.3",
    "deepmerge": "^4.3.1",
    "flat": "^6.0.1",
    "lodash.foreach": "^4.5.0",
    "lodash.get": "^4.4.2",
    "lodash.kebabcase": "^4.1.1",
    "lodash.mapkeys": "^4.6.0",
    "lodash.omit": "^4.5.0",
    "tailwind-merge": "^2.5.2",
    "tailwind-variants": "^0.2.1"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@testing-library/react-native": "^12.5.3",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/color": "^3.0.6",
    "@types/jest": "^29.5.5",
    "@types/lodash.foreach": "^4.5.9",
    "@types/lodash.get": "^4.4.9",
    "@types/lodash.kebabcase": "^4.1.9",
    "@types/lodash.mapkeys": "^4.6.9",
    "@types/lodash.omit": "^4.5.9",
    "@types/react": "^18.2.44",
    "@types/react-test-renderer": "^18.3.0",
    "@typescript-eslint/typescript-estree": "^7.12.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-testing-library": "^6.3.0",
    "jest": "^29.7.0",
    "nativewind": "4.1.23",
    "prettier": "^3.0.3",
    "prettier-plugin-tailwindcss": "^0.6.1",
    "react": "18.2.0",
    "react-native": "0.74.1",
    "react-native-builder-bob": "^0.30.2",
    "react-native-reanimated": "~3.16.1",
    "react-native-svg": "^15.6.0",
    "react-test-renderer": "18.3.1",
    "release-it": "^15.0.0",
    "tailwindcss": "3.4.7",
    "tsc-alias": "^1.8.10",
    "typescript": "5.0.4"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "nativewind": "4.x.x",
    "react": "*",
    "react-native": "*",
    "react-native-reanimated": "^3.16.1",
    "react-native-svg": "^15.6.0",
    "tailwindcss": "3.x.x"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "jest": {
    "preset": "react-native",
    "transformIgnorePatterns": [
      "node_modules/(?!(@react-native|react-native|react-native-reanimated|flat|react-native-css-interop)/)"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier",
      "plugin:testing-library/react"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "tabWidth": 2,
          "endOfLine": "auto",
          "useTabs": false,
          "semi": false,
          "singleQuote": true,
          "quoteProps": "consistent",
          "trailingComma": "es5",
          "importOrder": [
            "^@core/(.*)$",
            "^@server/(.*)$",
            "^@ui/(.*)$",
            "^[./]"
          ],
          "importOrderSeparation": true,
          "importOrderSortSpecifiers": true,
          "plugins": [
            "@trivago/prettier-plugin-sort-imports",
            "prettier-plugin-tailwindcss"
          ]
        }
      ],
      "no-console": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "@typescript-eslint/no-shadow": "off"
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ]
}
